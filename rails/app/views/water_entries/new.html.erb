<% content_for :title, "New water entry" %>

<% if @entry.errors.any? %>
  <%= render "shared/components/form/errors", name: "water", errors: @entry.errors %>
<% end %>

<%= form_with model: @entry, html: {"data-turbo-action": "replace"}, class: "max-w-lg mx-auto" do |form| %>
  <div class="form-container">
    <div class="form-group">
      <%= form.label :amount, class: "form-label" %>
      <div class="relative rounded-md shadow-sm">
        <%= form.number_field :amount, min: 1, value: nil, class: "form-input pr-12" %>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
          <span class="text-gray-500 sm:text-sm">oz</span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :occurred_on, "When?", class: "form-label" %>
      <%= form.date_field :occurred_on, value: Date.today, class: "form-input" %>
    </div>
  </div>
  <div class="form-buttons">
    <%= form.submit "Save", class: "btn-primary" %>
  </div>
<% end %>
